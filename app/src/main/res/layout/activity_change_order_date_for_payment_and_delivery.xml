<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChangeOrderDateForPaymentAndDelivery">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:background="#030700"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ketomatelogo" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="255dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textColor="#EFEAEA"
            android:textSize="36sp"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="@string/Checkout"
        android:textColor="#4CAF50"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Order Date"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="342dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="133dp"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="268dp"
            android:layout_marginBottom="301dp"
            android:layout_weight="1"
            android:text="Delivery Date*"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="268dp" />

        <CalendarView
            android:id="@+id/calendarView2"
            android:layout_width="266dp"
            android:layout_height="300dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="137dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="137dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="73dp"
            android:layout_height="30dp"
            android:layout_marginStart="301dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="296dp"
            android:text="Time*"
            android:textSize="20sp"
            android:layout_marginLeft="301dp"
            android:layout_marginRight="36dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="122dp"
            android:layout_height="41dp"
            android:layout_marginStart="283dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="236dp"
            android:hint="Select a time"
            android:layout_marginLeft="283dp"
            android:layout_marginRight="7dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="283dp"
            android:layout_marginTop="118dp"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="179dp"
            android:hint="AM/PM"
            android:layout_marginLeft="283dp"
            android:layout_marginRight="33dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="230dp"
            android:layout_marginRight="230dp"
            android:layout_marginBottom="51dp"
            android:background="#77B8EC"
            android:bufferType="normal"
            android:text="@string/back"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button2"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="237dp"
            android:layout_marginLeft="237dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="51dp"
            android:background="#77B8EC"
            android:text="@string/save"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

</LinearLayout>