<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChangeAddressForPaymentAndDelivery">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:background="#030700"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ketomatelogo" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="255dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textColor="#EFEAEA"
            android:textSize="36sp"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="@string/Checkout"
        android:textColor="#4CAF50"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/deliDetails"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="222dp"
            android:layout_marginBottom="55dp"
            android:layout_weight="1"
            android:text="Delivery Address*"
            android:textSize="20sp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="222dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="13dp"
            android:hint="Please enter your delivery address"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="69dp">

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="260dp"
            android:layout_marginRight="260dp"
            android:layout_marginBottom="18dp"
            android:autoLink="map"
            android:text="@string/setFrom" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="222dp"
            android:layout_height="50dp"
            android:layout_marginStart="167dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="19dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="XXXXXXXXXX"
            android:layout_marginLeft="167dp"
            android:layout_marginRight="22dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="71dp">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="260dp"
            android:layout_marginRight="260dp"
            android:layout_marginBottom="18dp"
            android:autoLink="map"
            android:text="@string/setTo" />

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="222dp"
            android:layout_height="50dp"
            android:layout_marginStart="171dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="19dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Set your Delivery Address"
            android:textColor="#5E5D5D"
            android:layout_marginLeft="171dp"
            android:layout_marginRight="18dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="78dp"
            android:layout_height="35dp"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="299dp"
            android:layout_marginRight="299dp"
            android:layout_marginBottom="11dp"
            android:layout_weight="1"
            android:text="@string/distance"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="86dp"
            android:layout_height="33dp"
            android:layout_marginStart="222dp"
            android:layout_marginLeft="222dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="103dp"
            android:layout_marginRight="103dp"
            android:layout_marginBottom="14dp"
            android:layout_weight="1"
            android:text="@string/deliCharges"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginStart="121dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="223dp"
            android:layout_marginBottom="13dp"
            android:hint="XX km"
            android:textColor="#190202"
            android:layout_marginLeft="121dp"
            android:layout_marginRight="223dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="321dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="14dp"
            android:hint="Rs.XX"
            android:textColor="#190202"
            android:layout_marginLeft="321dp"
            android:layout_marginRight="23dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:text="Dear customer,Rs.20 per kilo metre will be charged."
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="228dp"
            android:layout_marginRight="228dp"
            android:layout_marginBottom="35dp"
            android:background="#77B8EC"
            android:bufferType="normal"
            android:clickable="true"
            android:text="@string/back"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button2"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="234dp"
            android:layout_marginLeft="234dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="35dp"
            android:background="#77B8EC"
            android:text="@string/save"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

</LinearLayout>