            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="42dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="319dp"
            android:layout_marginLeft="319dp"
            android:layout_marginTop="177dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:text="cal"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="236dp"
            android:layout_marginEnd="325dp"
            android:layout_marginRight="325dp"
            android:text=" Rs."
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <ImageButton
            android:id="@+id/addCart"
            android:layout_width="73dp"
            android:layout_height="61dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="157dp"
            android:layout_marginEnd="302dp"
            android:layout_marginRight="302dp"
            android:background="#95AEEA00"

            android:scrollbarThumbVertical="@color/design_default_color_error"
            app:srcCompat="@drawable/ic_baseline_shopping_cart_24"
            tools:ignore="VectorDrawableCompat" />

        <Button
            android:id="@+id/addCustomize"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="166dp"
            android:layout_marginEnd="206dp"
            android:layout_marginRight="206dp"
            android:background="#A8FF6D00"
            android:text=" Customize" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>