<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomerDetailsForPaymentAndDelivery">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:background="#030700"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ketomatelogo" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="255dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textColor="#EFEAEA"
            android:textSize="36sp"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="@string/Checkout"
        android:textColor="#4CAF50"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Customer Details"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="127dp"
            android:layout_height="29dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="274dp"
            android:layout_marginBottom="67dp"
            android:layout_weight="1"
            android:text="@string/name1"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="274dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="387dp"
            android:layout_height="42dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="21dp"
            android:hint="@string/hn1"
            tools:ignore="MissingClass"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="14dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="139dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="262dp"
            android:layout_marginBottom="72dp"
            android:layout_weight="1"
            android:text="@string/name2"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="262dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="387dp"
            android:layout_height="42dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="21dp"
            android:hint="@string/hn2"
            tools:ignore="MissingClass"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="14dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="175dp"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="226dp"
            android:layout_marginBottom="68dp"
            android:layout_weight="1"
            android:text="@string/tel"
            android:textSize="20sp"
            android:layout_marginRight="226dp"
            android:layout_marginLeft="10dp" />

        <EditText
            android:id="@+id/editTextPhone2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="24dp"
            android:ems="10"
            android:hint="@string/htel"
            android:inputType="phone"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="11dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="226dp"
            android:layout_marginBottom="39dp"
            android:background="#77B8EC"
            android:bufferType="normal"
            android:text="@string/back"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="226dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="225dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="37dp"
            android:layout_marginBottom="40dp"
            android:background="#77B8EC"
            android:text="@string/cont"
            android:textColor="#FFFFFF"
            android:layout_marginRight="37dp"
            android:layout_marginLeft="225dp" />

    </RelativeLayout>

</LinearLayout>