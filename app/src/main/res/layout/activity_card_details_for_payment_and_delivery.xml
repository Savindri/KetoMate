<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CardDetailsForPaymentAndDelivery">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:background="#030700"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ketomatelogo" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="255dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textColor="#EFEAEA"
            android:textSize="36sp"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Card Details"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="205dp"
            android:layout_height="26dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="196dp"
            android:layout_marginBottom="54dp"
            android:layout_weight="1"
            android:text="CardHolder's Name*"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="196dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="401dp"
            android:layout_height="39dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="8dp"
            android:hint="Please enter cardholder's name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="156dp"
            android:layout_marginBottom="52dp"
            android:layout_weight="1"
            android:text="Credit/Debit Card Number"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="156dp" />

        <EditText
            android:id="@+id/editTextNumber6"
            android:layout_width="399dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="3dp"
            android:ems="10"
            android:hint="Please enter the 16 digits in your card"
            android:inputType="number"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="0dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="131dp"
            android:layout_marginBottom="53dp"
            android:layout_weight="1"
            android:text="Expiration Date(Month/Year)"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="131dp" />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="265dp"
            android:layout_marginBottom="2dp"
            android:ems="10"
            android:hint="Month"
            android:inputType="number"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="265dp" />

        <EditText
            android:id="@+id/editTextNumber2"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="87dp"
            android:layout_marginBottom="3dp"
            android:ems="10"
            android:hint="Year"
            android:inputType="number"
            android:layout_marginLeft="190dp"
            android:layout_marginRight="87dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="156dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            android:text="CVV/Security Code"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="156dp" />

        <EditText
            android:id="@+id/editTextNumber8"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="4dp"
            android:ems="10"
            android:hint="Please enter the 3 digits in your card"
            android:inputType="number"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="0dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="230dp"
            android:layout_marginRight="230dp"
            android:layout_marginBottom="34dp"
            android:background="#77B8EC"
            android:bufferType="normal"
            android:text="@string/back"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button2"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="237dp"
            android:layout_marginLeft="237dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="35dp"
            android:background="#77B8EC"
            android:text="@string/cont"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

</LinearLayout>